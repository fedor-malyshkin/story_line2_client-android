<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.nlp_project.story_line.client_android">

    <application
        android:allowBackup="true"
        android:description="@string/description_activity_startup"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartupActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_startup"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".WallNewspaperActivity"
            android:label="@string/title_activity_wall_newspaper">
        </activity>
        <activity
            android:name=".NewspaperShelfActivity"
            android:label="@string/title_activity_newspaper_shelf">
        </activity>

        <receiver
            android:name=".StartupBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.SHUTDOWN"/>
                <action android:name="android.intent.action.ACTION_SHUTDOWN"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".EventProcessingService"
            android:enabled="true"
            android:exported="true">
        </service>
    </application>

</manifest>