<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/categories_browser_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="ru.nlp_project.story_line.client_android.ui.categories_browser.CategoriesBrowserFragment">

  <Button
    android:id="@+id/categories_browser_category_i"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="I"/>

  <Button
    android:id="@+id/categories_browser_category_s"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="S"/>

  <Button
    android:id="@+id/categories_browser_category_r"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="R"/>

</LinearLayout>
