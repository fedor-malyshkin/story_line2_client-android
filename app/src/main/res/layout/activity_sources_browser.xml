<?xml version="1.0" encoding="utf-8"?>

<ru.nlp_project.story_line.client_android.ui.sources_browser.SlidingPaneLayoutEx
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/browser_sliding_panel"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <!-- side  container (for CategorySelector) -->
  <fragment
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="ru.nlp_project.story_line.client_android.ui.categories_browser.CategoriesBrowserFragment"
    >
  </fragment>

  <!-- main container -->
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
      android:id="@+id/browser_view_pager"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <android.support.v4.view.PagerTabStrip
        android:id="@+id/pager_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>

    </android.support.v4.view.ViewPager>
  </LinearLayout>


</ru.nlp_project.story_line.client_android.ui.sources_browser.SlidingPaneLayoutEx>
