<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/news_watcher_news_article_scroll_view"
  >
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <!--adjustViewBounds="true"  is important to maxHeight -->
    <ImageView
      android:id="@+id/news_watcher_news_article_image"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:scaleType="fitCenter"
      tools:ignore="ContentDescription"
      />
    <TextView
      android:id="@+id/news_watcher_news_article_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
      android:layout_margin="5sp"
      />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <TextView
        android:id="@+id/news_watcher_news_article_publication_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5sp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
      <TextView
        android:id="@+id/news_watcher_news_article_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5sp"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    </LinearLayout>

    <TextView
      android:layout_margin="5sp"
      android:id="@+id/news_watcher_news_article_content"
      android:layout_width="match_parent"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:layout_height="wrap_content"
      />

  </LinearLayout>
</android.support.v4.widget.NestedScrollView>
