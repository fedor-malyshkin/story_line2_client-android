<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/news_watcher_news_article_scroll_view"
  >
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <!--adjustViewBounds="true"  is important to maxHeight -->
    <ImageView
      android:id="@+id/news_watcher_news_article_image"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:scaleType="fitCenter"
      tools:ignore="ContentDescription"
      />
    <TextView
      android:id="@+id/news_watcher_news_article_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
      android:layout_margin="5sp"
      />
    <RelativeLayout
      android:id="@+id/news_watcher_news_article_details"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5sp"
      >
      <TextView
        android:id="@+id/news_watcher_news_article_publication_date"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textAlignment="textStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="4sp"
        />
      <TextView
        android:id="@+id/news_watcher_news_article_source"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textAlignment="textEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="4sp"
        tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

    <TextView
      android:layout_margin="5sp"
      android:id="@+id/news_watcher_news_article_content"
      android:layout_width="match_parent"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:layout_height="wrap_content"
      />

  </LinearLayout>
</android.support.v4.widget.NestedScrollView>
