<?xml version="1.0" encoding="utf-8"?>
<!--https://material.io/guidelines/patterns/navigation-drawer.html#navigation-drawer-specs-->
<RelativeLayout
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="@dimen/navigation_drawer_entry_height"
  android:background="?attr/selectableItemBackground"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView
    android:id="@+id/menu_item_icon"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_height="@dimen/navigation_drawer_icon_size"
    android:layout_width="@dimen/navigation_drawer_icon_size"
    android:layout_marginStart="@dimen/navigation_drawer_icon_side_margins"
    android:layout_marginEnd="@dimen/navigation_drawer_icon_side_margins"
    android:src="@android:drawable/ic_menu_view"
    android:alpha="0.54"
    android:contentDescription="x"
    tools:ignore="HardcodedText"/>

  <TextView
    android:id="@+id/menu_item_caption"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/navigation_drawer_content_left_margins"
    android:text="@string/activity_startup_title"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
    />
</RelativeLayout>

