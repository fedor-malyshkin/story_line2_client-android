<resources>

  <!-- Theming: https://medium.com/google-developers/theming-with-appcompat-1a292b754b35 -->
  <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
    <!-- your app branding color for the app bar -->
    <item name="colorPrimary">@color/primary</item>
    <!-- darker variant for the status bar and contextual app bars -->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <!-- theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/primary</item>
    <item name="titleTextColor">@color/primary_light</item>
    <!-- Customize your theme here. -->
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

  </style>

  <!-- https://www.bignerdranch.com/blog/splash-screens-the-right-way/ -->
  <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/drawable_background_splash_screen</item>
  </style>

</resources>
