<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
    android:title="@string/preferences_category_update_title">

  </PreferenceCategory>

  <PreferenceCategory
    android:title="@string/preferences_category_notification_title">

  </PreferenceCategory>

  <PreferenceCategory
    android:title="@string/preferences_category_presentation_title">

    <ListPreference
      android:key="font_size"
      android:title="@string/preferences_font_size_title"
      android:dialogTitle="@string/preferences_font_size_title"
      android:entries="@array/preferences_font_size_captions"
      android:entryValues="@array/preferences_font_size_values"
      android:defaultValue="14"/>

    <CheckBoxPreference
      android:key="is_dark_theme"
      android:title="@string/preferences_dark_theme_title"/>
    <CheckBoxPreference
      android:key="is_load_images"
      android:title="@string/preferences_load_images_title"
      android:defaultValue="true"/>
  </PreferenceCategory>

  <PreferenceScreen
    android:key="preferences_screen_sources_key"
    android:title="@string/preferences_screen_sources_title"
    android:summary="@string/preferences_screen_sources_summary">

    <Preference
      android:key="stub"
      android:title="stub"/>
  </PreferenceScreen>


</PreferenceScreen>